# Build stage
# Start with gradle:7.6.2-jdk21 base image
FROM gradle:8.12.1-jdk-21-and-23 AS build

# Set the working directory
WORKDIR /app

# Copy the Gradle wrapper and build files
COPY gradlew /app/
COPY gradle /app/gradle
COPY build.gradle /app/
COPY settings.gradle /app/

# Copy the source code
COPY src /app/src

# Build the application
RUN ["./gradlew", "clean", "build", "-x", "test"]

# Run stage
FROM amazoncorretto:21

ARG JAR_NAME="logistics-1.0.0.jar"

# Copy the JAR generated by Gradle into the container
COPY --from=build /app/build/libs/${JAR_NAME} /app/${JAR_NAME}

# Expose the Spring Boot port
EXPOSE 8080

# Command to run the application
ENTRYPOINT ["java","-Djava.security.egd=file:/dev/./urandom","-jar","/app/logistics-1.0.0.jar"]